{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5200",
  "ReverseProxy": {
    "Routes": {
      "patient-route": {
        "ClusterId": "patient-cluster",
        "Match": { "Path": "/api/patients/{**catch-all}" }
      },
      "insurance-plan-route": {
        "ClusterId": "patient-cluster",
        "Match": { "Path": "/api/insurance-plans/{**catch-all}" }
      },
      "scheduling-route": {
        "ClusterId": "scheduling-cluster",
        "Match": { "Path": "/api/appointments/{**catch-all}" }
      },
      "claims-route": {
        "ClusterId": "claims-cluster",
        "Match": { "Path": "/api/claims/{**catch-all}" }
      },
      "eligibility-route": {
        "ClusterId": "eligibility-cluster",
        "Match": { "Path": "/api/eligibility/{**catch-all}" }
      },
      "era-route": {
        "ClusterId": "era-cluster",
        "Match": { "Path": "/api/era/{**catch-all}" }
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "prescription-route": {
        "ClusterId": "prescription-cluster",
        "Match": { "Path": "/api/prescriptions/{**catch-all}" }
      },
      "prescriber-route": {
        "ClusterId": "prescription-cluster",
        "Match": { "Path": "/api/prescribers/{**catch-all}" }
      },
      "pharmacy-route": {
        "ClusterId": "prescription-cluster",
        "Match": { "Path": "/api/pharmacies/{**catch-all}" }
      },
      "vision-route": {
        "ClusterId": "vision-cluster",
        "Match": { "Path": "/api/vision/{**catch-all}" }
      },
      "vision-hub-route": {
        "ClusterId": "vision-cluster",
        "Match": { "Path": "/hubs/vision/{**catch-all}" }
      }
    },
    "Clusters": {
      "patient-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5101" }
        }
      },
      "scheduling-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5102" }
        }
      },
      "claims-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5103" }
        }
      },
      "eligibility-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5104" }
        }
      },
      "era-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5105" }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5106" }
        }
      },
      "prescription-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5107" }
        }
      },
      "vision-cluster": {
        "Destinations": {
          "primary": { "Address": "http://localhost:5108" }
        }
      }
    }
  }
}
