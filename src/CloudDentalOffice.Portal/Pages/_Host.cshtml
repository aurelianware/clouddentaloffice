@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace CloudDentalOffice.Portal.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <title>Cloud Dental Office - The Sentinel</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="css/sentinel.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <div id="components-reconnect-modal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 9999; align-items: center; justify-content: center;">
        <div style="background: #0a0a0a; border: 2px solid #00ffff; padding: 2rem; border-radius: 8px; text-align: center; color: #00ffff;">
            <h3>Connection Lost</h3>
            <p>Attempting to reconnect...</p>
            <div style="margin-top: 1rem;">
                <div class="spinner"></div>
            </div>
        </div>
    </div>

    <style>
        .spinner {
            border: 3px solid rgba(0, 255, 255, 0.3);
            border-radius: 50%;
            border-top: 3px solid #00ffff;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>

    <script src="_framework/blazor.server.js" autostart="false"></script>
    <script>
        Blazor.start({
            reconnectionOptions: {
                maxRetries: 8,
                retryIntervalMilliseconds: 2000
            },
            reconnectionHandler: {
                onConnectionDown: () => document.getElementById("components-reconnect-modal").style.display = "flex",
                onConnectionUp: () => document.getElementById("components-reconnect-modal").style.display = "none"
            }
        });
    </script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>

</body>
</html>
